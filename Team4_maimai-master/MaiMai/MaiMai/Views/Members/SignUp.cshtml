        function chkPassword() {
            //取得元素值
            let thePwd = document.getElementById("userPassWord").value;
            let thePwdLen = thePwd.length;
            let flag1 = false, flag2 = false; flag3 = false;
            let sp = document.getElementById("idsp2");

