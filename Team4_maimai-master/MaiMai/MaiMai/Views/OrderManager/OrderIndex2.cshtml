    //comment
     //OrderID:3 獲得目前評價s
    function getComment(oderdeail) {
        console.log(oderdeail);
        $("#OrderID").attr("name",oderdeail);
        $.ajax({
            url: "@Url.Action("getComment","MyOrder")",
            data: { OrderDetailID: oderdeail},
            type: "GET",
            success: function (result) {
