                var starTotal = result.starTotal;
                var starAVG = 0;
                if (CNT==0)
                {
                    starAVG = 0;
                }
                else
                {
                    starAVG = starTotal / CNT;
                }
                console.log('result ',result);
                console.log("img",`${result.img}`);
                console.log("starTotal", `${result.starTotal}`);
                console.log("starAVG得分",`${starAVG}`);

